# DTCE AI Bot Environment Configuration
# Copy this file to .env and fill in your actual values from Azure Portal

# Azure Storage - dtceaistorage
AZURE_STORAGE_ACCOUNT_NAME=dtceaistorage
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key_from_azure_portal
AZURE_STORAGE_CONTAINER=documents
AZURE_STORAGE_CONNECTION_STRING=""

# Azure Cognitive Search - dtceai-search (Central US)
AZURE_SEARCH_SERVICE_NAME=dtceai-search
AZURE_SEARCH_API_KEY=your_search_key_from_azure_portal
AZURE_SEARCH_INDEX_NAME=dtce-documents-index

# Azure OpenAI - dtceai-gpt (East US)
AZURE_OPENAI_ENDPOINT=https://dtceai-gpt.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_key_from_azure_portal
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Form Recognizer - dtceai-formrecognizer (East US)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://dtceai-formrecognizer.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_API_KEY=your_form_recognizer_key_from_azure_portal

# Microsoft Graph API (for SharePoint access - optional)
MICROSOFT_TENANT_ID=your_tenant_id
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
SHAREPOINT_SITE_ID=""

# Microsoft Bot Framework (if using Teams bot - optional)
MICROSOFT_APP_ID=""
MICROSOFT_APP_PASSWORD=""
MICROSOFT_APP_TENANT_ID=""

# Application Settings
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
