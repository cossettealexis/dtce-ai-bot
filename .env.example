# =============================================================================
# DTCE AI Assistant Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# Get these values from Azure Portal after running setup instructions

# Application Settings
APP_NAME=DTCE AI Assistant
APP_VERSION=1.2.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Azure Storage Configuration
# Get from: Azure Portal > Storage Accounts > Your Account > Access Keys
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name_here
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key_here
AZURE_STORAGE_CONTAINER=documents
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Azure Form Recognizer
# Get from: Azure Portal > Cognitive Services > Form Recognizer > Keys and Endpoint
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your_form_recognizer_key_here

# Microsoft Graph API Configuration
# Get from: Azure Portal > App Registrations > Your App > Overview
AZURE_CLIENT_ID=your_app_client_id_here
AZURE_CLIENT_SECRET=your_app_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here

# SharePoint Configuration
# Get from SharePoint admin or use Graph API explorer
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/yoursite
SHAREPOINT_SITE_ID=your_sharepoint_site_id_here
SHAREPOINT_DRIVE_ID=your_sharepoint_drive_id_here

# Microsoft Teams Bot Configuration (Optional)
# Get from: Azure Portal > Bot Channels Registration > Configuration
MICROSOFT_APP_ID=your_bot_app_id_here
MICROSOFT_APP_PASSWORD=your_bot_app_password_here
BOT_ENDPOINT=https://your-bot-url.azurewebsites.net/api/teams

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./dtce_ai.db

# AI/ML Configuration (Optional)
OPENAI_API_KEY=your_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here

# Security
SECRET_KEY=your_super_secret_key_here_minimum_32_characters_long
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Performance Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=300
MAX_FILE_SIZE_MB=100

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/dtce_ai.log

# =============================================================================
# Additional Optional Services
# =============================================================================

# Azure Cognitive Search (Optional - for advanced document search)
AZURE_SEARCH_SERVICE_NAME=your_search_service_name
AZURE_SEARCH_API_KEY=your_search_api_key
AZURE_SEARCH_INDEX_NAME=dtce-documents-index

# Application Runtime Settings
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
